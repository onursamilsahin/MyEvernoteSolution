@using MyEvernote.WebApp.ViewModels
@model  RegisterViewModel
@{
    ViewBag.Title = "My EverNote Girişi Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<!------ Include the above in your HEAD tag ---------->

<link href="~/Content/login-register.css" rel="stylesheet" />



<style>
    .validation-summary-errors {


        border: 2px dotted #a94442;
        background-color: :#d76663;
        border-radius: 8px;
    }

    .validation-summary-errors ul {

        list-style-type: none;
        padding: 10px;
        color: #000000;
    }
    .validation-summary-errors ul li {
 
        padding: 10px;
       
    }



</style>
@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu  </h1>
                </div>
                @*Hata mesajlarını göstermek için yazıldı .. Gayet güzel bir işlem.*@
                @Html.ValidationSummary(false) 
                <div class="main-content">

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>

                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız " })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>

                        @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "E-posta Adresi " })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifre Tekrarı", type = "password" })

                    </div>

               
                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>



                </div>
            </div>
        </div>
    </section>

}