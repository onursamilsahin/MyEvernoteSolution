@using MyEvernote.WebApp.ViewModels     
@model LoginViewModel
@{
    ViewBag.Title = "My EverNote Girişi Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<!------ Include the above in your HEAD tag ---------->

<link href="~/Content/login-register.css" rel="stylesheet" />
@using (Html.BeginForm("Login","Home",FormMethod.Post))
{
    
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Formu  </h1>
                </div>
                <div class="main-content">
            
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                    
                        @Html.TextBoxFor(model=>model.Username,new {@class="form-control",placeholder="Kullanıcı adınız "})
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model=>model.Password,new {@class="form-control",placeholder="Şifreniz",type="password"})

                    </div>
        
                    <div class="checkbox">
                        <label class="remember">
                            <input name="remember" type="checkbox" > Remember Me
                        </label>
                    </div>
          
                    <div class="form-group ">
                        <button href="#" type="submit"  class="btn btn-danger btn-lg btn-block login-button">login</button>
                    </div>              
                                            
                                                                            
      
                </div>
            </div>
        </div>
    </section>

}